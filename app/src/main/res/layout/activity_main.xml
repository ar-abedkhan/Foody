<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame"
        />



    <io.ak1.BubbleTabBar
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/bubblevar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:elevation="@dimen/_12sdp"
        android:padding="@dimen/_4sdp"
        android:soundEffectsEnabled="true"
        app:bubbletab_disabled_icon_color="@color/white"
        app:bubbletab_menuResource="@menu/list"
        app:bubbletab_horizontal_padding="20dp"
        app:bubbletab_icon_size="@dimen/_18sdp"
        app:bubbletab_title_size="@dimen/_13sdp"
        app:bubbletab_icon_padding="@dimen/_3sdp"
        app:bubbletab_vertical_padding="@dimen/_8sdp"
        app:bubbletab_tab_corner_radius="@dimen/_20sdp">
    </io.ak1.BubbleTabBar>

</androidx.constraintlayout.widget.ConstraintLayout>